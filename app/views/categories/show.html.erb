<main class="category">
  <h2><%= @category.name %> quotes</h2>
    <div class="form-link"><%= link_to "+ new quote", new_category_script_path(@category)%></div>

<div class="transitions-enabled masonry grid">
    <% @category.scripts.order("created_at DESC").each do |script| %>
        <%= link_to category_script_path(@category, script) do %>
        <div class= "grid-item">
          <p><%= script.quote %></p>
        </div>
        <% end %>
    <% end %>
</div>
</main>
